//2.
#include <stdio.h>
int main (void)
{
	char x;
	printf("请输入一个要打印的ASCII值：");
	scanf("%d",&x) ;//总忘加一个&号。。。 另：%d 是以ASCII值输入的，%c是以字符输入的2 
	printf("%c",x);
	getchar();
	return 0;
}
